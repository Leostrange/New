<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MrComic" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="Theme.MrComic.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.MrComic</item>
    </style>
    
    <style name="Theme.MrComic.Fullscreen" parent="Theme.MrComic">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>