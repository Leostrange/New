      },
      "RecommendationsList": {
        "type": "object",
        "properties": {
          "recommendations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Recommendation"
            }
          }
        },
        "required": ["recommendations"]
      },
      "Pagination": {
        "type": "object",
