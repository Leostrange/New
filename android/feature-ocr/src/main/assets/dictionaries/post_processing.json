{
  "text_corrections": {
    "common_ocr_errors": {
      "0": "O",
      "1": "l",
      "5": "S",
      "8": "B",
      "rn": "m",
      "cl": "d",
      "vv": "w"
    },
    "japanese_corrections": {
      "ニ": "二",
      "力": "カ",
      "夕": "タ",
      "工": "エ",
      "口": "ロ"
    }
  },
  "text_filtering": {
    "min_word_length": 1,
    "max_word_length": 50,
    "remove_single_characters": false,
    "remove_numbers_only": false
  },
  "formatting": {
    "preserve_line_breaks": true,
    "normalize_whitespace": true,
    "remove_extra_spaces": true,
    "capitalize_sentences": false
  }
}

