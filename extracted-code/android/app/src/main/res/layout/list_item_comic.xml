<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/comicCoverImageView"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" /> <!-- Заглушка для предпросмотра -->

    <TextView
        android:id="@+id/comicTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/comicCoverImageView"
        app:layout_constraintTop_toTopOf="@id/comicCoverImageView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Очень длинное название комикса, которое может не поместиться в одну строку" />

    <TextView
        android:id="@+id/comicPageInfoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/comicCoverImageView"
        app:layout_constraintTop_toBottomOf="@id/comicTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Стр. 10 / 150" />

    <ProgressBar
        android:id="@+id/comicProgressProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:max="100"
        app:layout_constraintStart_toEndOf="@id/comicCoverImageView"
        app:layout_constraintTop_toBottomOf="@id/comicPageInfoTextView"
        app:layout_constraintEnd_toStartOf="@+id/comicProgressTextView"
        tools:progress="66" />

    <TextView
        android:id="@+id/comicProgressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/comicProgressProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/comicProgressProgressBar"
        app:layout_constraintBottom_toBottomOf="@id/comicProgressProgressBar"
        tools:text="66%" />

</androidx.constraintlayout.widget.ConstraintLayout>
